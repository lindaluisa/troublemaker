<h2 class="site-header">The revolution starts NOW!</h2>

<div class="container main-body stretch-box">
    
    <% if(typeof message !== "undefined") {%>
        <div class="alert alert-danger"><%= message %></div>
      <% } %>
  <form id="form" action="/create-rev" method="POST">
  <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="e.g. XXX">
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" class="form-control" id="date" name="date" min="2018-02-11" max="2020-02-11" required>
  </div>

  <div class="form-group">
      <input type="text" id="autocomplete" class="form-control" name="address">
      <input type="text" name="revlat" id="rev-lat" class="hidden">
      <input type="text" name="revlng" id="rev-lng" class="hidden">
      <input type="text" name="vicinity" id="vicinity" class="hidden">
  </div>

  <div class="form-group">
      <label for="molotovScale">Molotov Scale</label>
      <select class="form-control" id="molotovScale" name="molotovScale">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
  </div>

  <div class="form-group">
      <label for="call">Manifesto</label>
      <textarea class="form-control" id="manifesto" name="manifesto">
      </textarea>
  </div>
  
    <button type="submit" class="btn btn-danger">Create a Revolution!</button>
  </form>
</div>
<script src="/javascripts/autocomplete.js"></script>